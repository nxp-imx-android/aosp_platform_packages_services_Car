                    name='LENS_POSE_TRANSLATION'
                    type='float'
                    size='3'
                    value='6.2061817994768809e-01,1.4469708452125858e+00,2.0664202934427706e-01'
                />
                <parameter
                    name='LENS_POSE_ROTATION'
                    type='float'
                    size='4'
                    value='-0.5839847,0.7180469,-0.3088415,-0.2190605'

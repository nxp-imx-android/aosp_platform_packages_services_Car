<resources>
    <style name="Theme.DeviceDefaultBase.Car">
        <item name="colorAccent">@color/car_highlight</item>
        <item name="colorButtonNormal">@color/car_highlight</item>
        <item name="colorControlHighlight">@color/car_card_ripple_background</item>
        <item name="buttonStyle">@style/Widget.CarDefault.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.CarDefault.Button.Borderless.Colored</item>
        <item name="progressBarStyleHorizontal">@style/Widget.CarDefault.ProgressBar.Horizontal</item>
        <item name="textColorHint">@color/car_body2</item>
        <item name="editTextStyle">@style/Widget.CarDefault.EditText</item>
        <item name="editTextColor">@color/car_body1</item>
        <item name="colorControlNormal">@color/car_body2</item>
        <item name="seekBarStyle">@style/Widget.CarDefault.SeekBar</item>
        <item name="colorControlHighlight">@color/car_card_ripple_background_inverse</item>
        <item name="colorBackground">@color/car_background</item>
        <item name="colorPrimary">@color/car_grey_928</item>
        <item name="colorPrimaryDark">@color/car_grey_958</item>
    </style>

    <!--Still leave DeviceDefault empty such that it can be overlayed -->
    <style name="Theme.DeviceDefault" parent="Theme.DeviceDefaultBase.Car"/>

    <style name="Theme.DeviceDefault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Variant of the DeviceDefault theme that has no title bar and fills the entire screen.  This
        theme sets {@link android.R.attr#windowFullscreen} to true. -->
    <style name="Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="windowFullscreen">true</item>
        <item name="windowContentOverlay">@null</item>
    </style>

</resources>
